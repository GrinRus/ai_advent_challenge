# Backend database connectivity
APP_DB_URL=jdbc:postgresql://postgres:5434/ai_advent
APP_DB_USERNAME=ai_advent
APP_DB_PASSWORD=ai_advent
SPRING_PROFILES_ACTIVE=prod

# LLM provider configuration (z.ai glm4.6)
LLM_BASE_URL=https://api.z.ai
LLM_CHAT_COMPLETIONS_PATH=/api/paas/v4/chat/completions
LLM_API_KEY=replace-with-real-key
LLM_MODEL=glm-4.6
LLM_TEMPERATURE=0.7
LLM_TOP_P=1.0
LLM_MAX_TOKENS=1024

# Chat memory configuration
CHAT_MEMORY_WINDOW_SIZE=20
CHAT_MEMORY_RETENTION=PT6H
CHAT_MEMORY_CLEANUP_INTERVAL=PT30M

# Postgres configuration
POSTGRES_DB=ai_advent
